<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.give10">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Give10">
        <activity android:name=".activities.SplashActivity"
            android:theme="@style/Theme.Give10.NoActionBar.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:theme="@style/Theme.Give10.NoActionBar" />
        <activity
            android:name=".activities.GiveCharity"
            android:label="@string/title_activity_give_charity"
            android:theme="@style/Theme.Give10.NoActionBar.Dialog" />
        <activity
            android:name=".activities.AddIncome"
            android:label="@string/title_activity_add_income"
            android:theme="@style/Theme.Give10.NoActionBar.Dialog" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Give10.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

            </intent-filter>
        </activity>
    </application>

</manifest>